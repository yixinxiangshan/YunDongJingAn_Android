<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <solid android:color="#66ffffff" />
    <!-- 设置边距 -->
    <padding
        android:bottom="3dp"
        android:left="8dp"
        android:right="8dp"
        android:top="3dp" />
    <!-- 控制边界颜色和笔触大小 -->
    <stroke android:width="0dp" />

    <!--
         控制界面颜色渐变
    <gradient 
        android:startColor="#e9e9e9"
        android:endColor="#ffffff"
        android:type="linear"
        android:angle="90"/>
    -->
    <!-- 控制圆角大小 -->
    <corners android:radius="16dp" />

</shape>