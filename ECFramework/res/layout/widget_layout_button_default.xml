<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_gridview_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/widget_index_button_layout_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/widget_layout_button_default_linearlayout_padding_top"
    android:paddingLeft="@dimen/widget_layout_button_default_linearlayout_padding"
    android:paddingRight="@dimen/widget_layout_button_default_linearlayout_padding"
    android:paddingBottom="@dimen/widget_layout_button_default_linearlayout_padding"     >

    <GridView
        android:id="@+id/gridview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/widget_layout_button_default_imageview_layout_margintop"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:scrollingCache="@android:color/transparent"
        android:verticalSpacing="@dimen/widget_layout_button_default_gridview_layout_verticalspacing" />

</LinearLayout>