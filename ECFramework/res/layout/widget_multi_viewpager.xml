<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.ecloudiot.framework.view.ViewMultiViewpagerContainer
        android:id="@+id/pager_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:clipChildren="false"
        android:paddingTop="@dimen/multi_viewpager_widget_pagercontainer_padding_top"
        android:paddingBottom="@dimen/multi_viewpager_widget_pagercontainer_padding_bottom"
        android:background="@color/multi_viewpager_widget_viewpager_container_bgcolor" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </com.ecloudiot.framework.view.ViewMultiViewpagerContainer>

</LinearLayout>