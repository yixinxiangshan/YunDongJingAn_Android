<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_listviewcell_text_with_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff2f2f2"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="horizontal"
    android:padding="10dp"
    android:visibility="visible" >

    <TextView
        android:id="@+id/widget_listviewcell_text_with_button_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:paddingLeft="10dp"
        android:text=""
        android:textColor="?attr/widget_listview_text_color"
        android:textSize="?attr/text_size_big"
        />

    <TextView
        android:id="@+id/widget_listviewcell_text_with_button_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_listviewcell_text_with_button_btn_bg_xml"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="@color/widget_listviewcell_text_with_button_button_color"
        android:textSize="?attr/text_size_normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_listviewcell_text_with_button_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/widget_listviewcell_button_btn_ok_bg_xml"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:textColor="#FFFFFFFF"
        android:textSize="?attr/text_size_normal"
        android:visibility="gone" />

</LinearLayout>