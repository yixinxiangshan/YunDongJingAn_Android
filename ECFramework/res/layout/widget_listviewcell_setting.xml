<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_listviewcell_setting"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_listviewitem_deflaut_bg_color"
    android:orientation="vertical"
    android:padding="10dp"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/widget_listviewcell_setting_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="字体大小"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/widget_listviewcell_setting_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14号"
            android:textColor="@color/widget_listview_text_gray"
            android:textSize="14sp" />

        <com.ecloudiot.framework.widget.switchbutton.SwitchButton
            android:id="@+id/widget_listviewcell_setting_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_listviewcell_setting_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="调整字体的大小，找到适合的字体大小。"
        android:textColor="@color/widget_listview_text_gray"
        android:textSize="14sp" />

</LinearLayout>