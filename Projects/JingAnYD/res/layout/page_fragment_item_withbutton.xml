<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#cc0000"
        android:orientation="horizontal"
        android:id="@+id/page_fragment_item_map_up"
        tools:ignore="DisableBaselineAlignment" >

        <LinearLayout
            android:id="@+id/activity_item_extends_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/activity_item_extends_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />
        <LinearLayout
            android:id="@+id/activity_item_extends_button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blank_llayout_content"
        android:layout_below="@id/page_fragment_item_map_up"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#cccc00"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>